---
# OBM global configuration
obm_major_version: 2.5
# Public URL of the OBM web interface
obm_external_url: obm.example.com
# Type of the database (should be either PGSQL or MYSQL)
obm_db_type: PGSQL
# The server hosting the database, or if you have an SQL load balancer, the SQL
# load balancer
obm_db_host: toto.example.com
# If you have a master/slave configuration, this is the host for the master
obm_db_master_host: "{{ obm_db_host }}"
# Whether you have an SQL load balancer
has_sql_load_balancer: "{{ obm_db_host != obm_db_master_host }}"
# Login of the database
obm_db_user: obm
# Password for the database
obm_db_password: obm
# Name of the database
obm_db_name: obm
# Language of the database
obm_language: fr
obm_ldap_host: obm.example.com

# OBM SSL certificates
ca_path: /var/lib/obm-ca/cacert.pem
cert_path: /etc/obm/certs/obm_cert.pem
key_path: /etc/obm/certs/obm_cert.pem

# Global NTP server (if needed)
ntp_server: 192.168.122.1

# Packages mode (default: internet)
# Allows you to deploy your architecture without internet access
#
#  internet : get packages from internet repositories
#  proxy: add all repositories hostnames in /etc/hosts and make
#         them point to this machine.
#  rsync: rsync resources/rpm-repos directory and install from it
#
packages_mode: internet
packages_proxy: 192.168.122.1
